<!--pages/addGoods/addGoods.wxml-->
<text>添加商品</text>

<view>
<text>商品名称</text>
<input bindinput='setGoodsName' />
</view>
<view>
<text>商品描述</text>
<input bindinput='setGoodsDescription' />
</view>

<!-- 上传图片测试 -->
<view class="uploader">
    <view class="uploader-text" bindtap="doUpload">
        <text>上传图片</text>
    </view>
    <view class="uploader-container" wx:if="{{goodsImgUrl}}">
        <image
            class="uploader-image"
            src="{{goodsImgUrl}}"
            mode="aspectFit"
            bindtap="previewImg"
        ></image>
    </view>
</view>


<view>
<button bindtap="addGoods">提交</button></view>